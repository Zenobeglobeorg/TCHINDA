# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/tchinda_market?schema=public"

# Supabase (Production)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"
SUPABASE_STORAGE_BUCKET="product-images"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# 2FA Configuration
TWO_FACTOR_ISSUER="TCHINDA"

# Email Configuration (for notifications)
# Email provider: smtp | emailjs
EMAIL_PROVIDER="smtp"

# SMTP (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@tchinda.com"
EMAIL_FROM_NAME="TCHINDA"

# EmailJS (server-side) - do NOT commit real keys
# IMPORTANT: Never paste your private key in chat or in the repo.
EMAILJS_PUBLIC_KEY="your-emailjs-public-key"
EMAILJS_PRIVATE_KEY="your-emailjs-private-key"
EMAILJS_SERVICE_ID="your-emailjs-service-id"
EMAILJS_TEMPLATE_ID="your-emailjs-template-id"

# SMS Configuration
# Choisissez votre provider: test, twilio, messagebird, vonage, aws-sns
SMS_PROVIDER="test"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# MessageBird Configuration
MESSAGEBIRD_API_KEY="your-messagebird-api-key"
MESSAGEBIRD_ORIGINATOR="TCHINDA"

# Vonage (ex-Nexmo) Configuration
VONAGE_API_KEY="your-vonage-api-key"
VONAGE_API_SECRET="your-vonage-api-secret"
VONAGE_BRAND_NAME="TCHINDA"

# AWS SNS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-in-production"

# Frontend URL (for CORS)
# URL unique du frontend
FRONTEND_URL="http://localhost:8081"
# URL de l'application mobile (Expo)
MOBILE_APP_URL="exp://localhost:8081"
# URLs multiples séparées par des virgules (optionnel)
# FRONTEND_URLS="https://tchinda-three.vercel.app,https://www.tchinda.com"
# Note: Tous les domaines *.vercel.app sont automatiquement autorisés

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Verification limits (unverified accounts)
LIMIT_UNVERIFIED_WALLET_TX_PER_DAY=5
LIMIT_UNVERIFIED_ORDERS_PER_DAY=5
LIMIT_UNVERIFIED_MAX_AMOUNT=50000
LIMIT_EMAIL_VERIFIED_MAX_AMOUNT=200000


